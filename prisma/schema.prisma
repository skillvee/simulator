generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  extensions = [uuid_ossp(map: "uuid-ossp", schema: "extensions"), vector]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                     String                  @id @default(cuid())
  name                   String?
  email                  String?                 @unique
  emailVerified          DateTime?
  image                  String?
  password               String?
  role                   UserRole                @default(USER)
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  deletedAt              DateTime?
  dataDeleteRequestedAt  DateTime?
  accounts               Account[]
  assessments            Assessment[]
  createdScenarios       Scenario[]              @relation("CreatedScenarios")
  sessions               Session[]
  simulationCreationLogs SimulationCreationLog[]
  videoAssessments       VideoAssessment[]
}

model Scenario {
  id                     String                  @id @default(cuid())
  name                   String
  companyName            String
  companyDescription     String
  taskDescription        String
  repoUrl                String?
  techStack              String[]
  isPublished            Boolean                 @default(false)
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  createdById            String?
  targetLevel            String                  @default("mid")
  archetypeId            String?
  repoSpec               Json?
  assessments            Assessment[]
  coworkers              Coworker[]
  archetype              Archetype?              @relation(fields: [archetypeId], references: [id])
  createdBy              User?                   @relation("CreatedScenarios", fields: [createdById], references: [id])
  simulationCreationLogs SimulationCreationLog[]
}

model Coworker {
  id            String         @id @default(cuid())
  scenarioId    String
  name          String
  role          String
  personaStyle  String
  knowledge     Json
  avatarUrl     String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  voiceName     String?
  personality   Json?
  conversations Conversation[]
  scenario      Scenario       @relation(fields: [scenarioId], references: [id], onDelete: Cascade)
}

model Assessment {
  id                     String              @id @default(cuid())
  userId                 String
  scenarioId             String
  status                 AssessmentStatus    @default(WELCOME)
  startedAt              DateTime            @default(now())
  completedAt            DateTime?
  prUrl                  String?
  report                 Json?
  createdAt              DateTime            @default(now())
  updatedAt              DateTime            @updatedAt
  ciStatus               Json?
  prSnapshot             Json?
  codeReview             Json?
  supersededBy           String?
  managerMessagesStarted Boolean             @default(false)
  reviewedAt             DateTime?
  repoUrl                String?
  repoStatus             String?             @default("pending")
  scenario               Scenario            @relation(fields: [scenarioId], references: [id], onDelete: Cascade)
  user                   User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiCalls               AssessmentApiCall[]
  logs                   AssessmentLog[]
  conversations          Conversation[]
  recordings             Recording[]
  videoAssessment        VideoAssessment?
}

model Conversation {
  id           String     @id @default(cuid())
  assessmentId String
  coworkerId   String?
  type         String
  transcript   Json
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  assessment   Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  coworker     Coworker?  @relation(fields: [coworkerId], references: [id])
}

model Recording {
  id           String             @id @default(cuid())
  assessmentId String
  type         String
  storageUrl   String
  startTime    DateTime
  endTime      DateTime?
  analysis     Json?
  createdAt    DateTime           @default(now())
  assessment   Assessment         @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  segments     RecordingSegment[]
}

model RecordingSegment {
  id              String           @id @default(cuid())
  recordingId     String
  segmentIndex    Int
  startTime       DateTime
  endTime         DateTime?
  status          String           @default("recording")
  chunkPaths      String[]
  screenshotPaths String[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  recording       Recording        @relation(fields: [recordingId], references: [id], onDelete: Cascade)
  analysis        SegmentAnalysis?
}

model SegmentAnalysis {
  id                  String           @id @default(cuid())
  segmentId           String           @unique
  activityTimeline    Json?
  toolUsage           Json?
  stuckMoments        Json?
  totalActiveTime     Int?
  totalIdleTime       Int?
  focusScore          Int?
  aiAnalysis          Json?
  analyzedAt          DateTime         @default(now())
  screenshotsAnalyzed Int?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  segment             RecordingSegment @relation(fields: [segmentId], references: [id], onDelete: Cascade)
}

model VideoAssessment {
  id                String                   @id @default(cuid())
  candidateId       String
  videoUrl          String
  status            VideoAssessmentStatus    @default(PENDING)
  createdAt         DateTime                 @default(now())
  completedAt       DateTime?
  assessmentId      String?                  @unique
  lastFailureReason String?
  retryCount        Int                      @default(0)
  isSearchable      Boolean                  @default(true)
  embeddings        CandidateEmbedding?
  scores            DimensionScore[]
  assessment        Assessment?              @relation(fields: [assessmentId], references: [id])
  candidate         User                     @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  apiCalls          VideoAssessmentApiCall[]
  logs              VideoAssessmentLog[]
  summary           VideoAssessmentSummary?

  @@index([candidateId])
  @@index([status])
  @@index([assessmentId])
}

model DimensionScore {
  id                  String          @id @default(cuid())
  assessmentId        String
  dimension           String
  score               Int
  observableBehaviors String
  timestamps          Json
  trainableGap        Boolean         @default(false)
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  confidence          String          @default("medium")
  rationale           String?
  assessment          VideoAssessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)

  @@unique([assessmentId, dimension])
  @@index([assessmentId])
}

model VideoAssessmentSummary {
  id             String          @id @default(cuid())
  assessmentId   String          @unique
  overallSummary String
  rawAiResponse  Json
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  assessment     VideoAssessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
}

model AssessmentLog {
  id           String                 @id @default(cuid())
  assessmentId String
  eventType    AssessmentLogEventType
  timestamp    DateTime               @default(now())
  durationMs   Int?
  metadata     Json?
  assessment   Assessment             @relation(fields: [assessmentId], references: [id], onDelete: Cascade)

  @@index([assessmentId])
  @@index([timestamp])
  @@index([assessmentId, timestamp])
}

model AssessmentApiCall {
  id                String     @id @default(cuid())
  assessmentId      String
  requestTimestamp  DateTime   @default(now())
  responseTimestamp DateTime?
  durationMs        Int?
  promptText        String
  promptTokens      Int?
  responseText      String?
  responseTokens    Int?
  modelVersion      String
  statusCode        Int?
  errorMessage      String?
  stackTrace        String?
  modelUsed         String?
  promptType        String?
  promptVersion     String?
  tokenCount        Int?
  assessment        Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)

  @@index([assessmentId])
  @@index([requestTimestamp])
  @@index([assessmentId, requestTimestamp])
}

model VideoAssessmentLog {
  id                String                 @id @default(cuid())
  videoAssessmentId String
  eventType         AssessmentLogEventType
  timestamp         DateTime               @default(now())
  durationMs        Int?
  metadata          Json?
  videoAssessment   VideoAssessment        @relation(fields: [videoAssessmentId], references: [id], onDelete: Cascade)

  @@index([videoAssessmentId])
  @@index([timestamp])
  @@index([videoAssessmentId, timestamp])
}

model VideoAssessmentApiCall {
  id                String          @id @default(cuid())
  videoAssessmentId String
  requestTimestamp  DateTime        @default(now())
  responseTimestamp DateTime?
  durationMs        Int?
  promptText        String
  promptTokens      Int?
  responseText      String?
  responseTokens    Int?
  modelVersion      String
  statusCode        Int?
  errorMessage      String?
  stackTrace        String?
  videoAssessment   VideoAssessment @relation(fields: [videoAssessmentId], references: [id], onDelete: Cascade)

  @@index([videoAssessmentId])
  @@index([requestTimestamp])
  @@index([videoAssessmentId, requestTimestamp])
}

/// Role family grouping (e.g., Engineering, Product, Sales)
/// Each family has its own set of role-specific dimensions and archetypes
model RoleFamily {
  id          String                @id @default(cuid())
  slug        String                @unique
  name        String
  description String
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  archetypes  Archetype[]
  redFlags    RedFlag[]
  dimensions  RoleFamilyDimension[]
}

/// Assessment dimension definition (e.g., "Technical Execution", "Communication")
/// Dimensions can be universal (isUniversal=true) or role-family-specific
model Dimension {
  id               String                @id @default(cuid())
  slug             String                @unique
  name             String
  description      String
  isUniversal      Boolean               @default(false)
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
  archetypeWeights ArchetypeWeight[]
  roleFamilies     RoleFamilyDimension[]
  rubricLevels     RubricLevel[]
  seniorityGates   SeniorityGate[]
}

/// Join table linking role families to dimensions with ordering
model RoleFamilyDimension {
  id           String     @id @default(cuid())
  roleFamilyId String
  dimensionId  String
  sortOrder    Int        @default(0)
  dimension    Dimension  @relation(fields: [dimensionId], references: [id], onDelete: Cascade)
  roleFamily   RoleFamily @relation(fields: [roleFamilyId], references: [id], onDelete: Cascade)

  @@unique([roleFamilyId, dimensionId])
}

/// Rubric level definition with behavioral anchors
/// Each dimension has 4 levels (1-4), with optional role-family-specific overrides
/// When roleFamilyId is null, this is the default rubric for the dimension.
/// When roleFamilyId is set, this overrides the default for that role family.
model RubricLevel {
  id           String    @id @default(cuid())
  dimensionId  String
  roleFamilyId String?
  level        Int
  label        String
  pattern      String
  evidence     Json
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  dimension    Dimension @relation(fields: [dimensionId], references: [id], onDelete: Cascade)

  @@unique([dimensionId, roleFamilyId, level])
  @@index([dimensionId])
  @@index([dimensionId, level])
}

/// Role archetype within a role family (e.g., "Frontend Engineer" within Engineering)
model Archetype {
  id             String            @id @default(cuid())
  roleFamilyId   String
  slug           String            @unique
  name           String
  description    String
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  roleFamily     RoleFamily        @relation(fields: [roleFamilyId], references: [id], onDelete: Cascade)
  weights        ArchetypeWeight[]
  scenarios      Scenario[]
  seniorityGates SeniorityGate[]
}

/// Weight for a dimension within an archetype
model ArchetypeWeight {
  id          String    @id @default(cuid())
  archetypeId String
  dimensionId String
  weight      Float
  archetype   Archetype @relation(fields: [archetypeId], references: [id], onDelete: Cascade)
  dimension   Dimension @relation(fields: [dimensionId], references: [id], onDelete: Cascade)

  @@unique([archetypeId, dimensionId])
}

/// Seniority gate: minimum score per dimension per seniority level for an archetype
model SeniorityGate {
  id             String    @id @default(cuid())
  archetypeId    String
  dimensionId    String
  seniorityLevel String
  minScore       Int
  archetype      Archetype @relation(fields: [archetypeId], references: [id], onDelete: Cascade)
  dimension      Dimension @relation(fields: [dimensionId], references: [id], onDelete: Cascade)

  @@unique([archetypeId, dimensionId, seniorityLevel])
}

/// Red flag definitions per role family
/// Binary indicators that are always surfaced regardless of scores
model RedFlag {
  id           String     @id @default(cuid())
  roleFamilyId String
  slug         String
  name         String
  description  String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  roleFamily   RoleFamily @relation(fields: [roleFamilyId], references: [id], onDelete: Cascade)

  @@unique([roleFamilyId, slug])
}

model CandidateEmbedding {
  id                      String                @id @default(cuid())
  videoAssessmentId       String                @unique
  observableBehaviorsText String
  overallSummaryText      String
  embedding               Unsupported("vector")
  embeddingModel          String                @default("text-embedding-004")
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  videoAssessment         VideoAssessment       @relation(fields: [videoAssessmentId], references: [id], onDelete: Cascade)

  @@index([videoAssessmentId])
}

model SimulationCreationLog {
  id             String                   @id @default(cuid())
  userId         String
  status         SimulationCreationStatus @default(STARTED)
  roleTitle      String?
  companyName    String?
  techStack      String[]
  seniorityLevel String?
  archetypeId    String?
  source         String                   @default("guided")
  scenarioId     String?
  failedStep     String?
  errorMessage   String?
  errorDetails   Json?
  createdAt      DateTime                 @default(now())
  completedAt    DateTime?
  scenario       Scenario?                @relation(fields: [scenarioId], references: [id])
  user           User                     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum UserRole {
  USER
  ADMIN
  RECRUITER
}

enum AssessmentStatus {
  WELCOME
  WORKING
  COMPLETED
}

enum AssessmentDimension {
  COMMUNICATION
  PROBLEM_SOLVING
  TECHNICAL_KNOWLEDGE
  COLLABORATION
  ADAPTABILITY
  LEADERSHIP
  CREATIVITY
  TIME_MANAGEMENT
}

enum VideoAssessmentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum AssessmentLogEventType {
  STARTED
  PROMPT_SENT
  RESPONSE_RECEIVED
  PARSING_STARTED
  PARSING_COMPLETED
  ERROR
  COMPLETED
}

enum SimulationCreationStatus {
  STARTED
  GENERATING
  SAVING
  COMPLETED
  FAILED
}
