# ==============================================================================
# Skillvee Simulator - Environment Variables
# ==============================================================================
# Copy this file to .env.local and fill in the values.

# ==============================================================================
# Database (Supabase/PostgreSQL)
# ==============================================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/simulator?pgbouncer=true"
DIRECT_URL="postgresql://postgres:password@localhost:5432/simulator"

# ==============================================================================
# Supabase
# ==============================================================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ==============================================================================
# Authentication (NextAuth)
# ==============================================================================
AUTH_SECRET="your-auth-secret-min-32-chars"
AUTH_URL="http://localhost:3000"

# ==============================================================================
# Google OAuth
# ==============================================================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ==============================================================================
# Gemini AI
# ==============================================================================
GEMINI_API_KEY="your-gemini-api-key"

# ==============================================================================
# GitHub Integration
# ==============================================================================
# GITHUB_TOKEN="your-github-token"  # For PR integration

# GitHub Organization Token (US-007)
# Required for automatic repository provisioning from templates
# Token needs "repo" scope and write access to the organization
# GITHUB_ORG_TOKEN="your-github-org-token"

# ==============================================================================
# Optional: Resend (for email notifications)
# ==============================================================================
# RESEND_API_KEY="your-resend-api-key"

# ==============================================================================
# E2E Testing Flags
# ==============================================================================
# These flags are ONLY for E2E testing and should NEVER be set in production.
# They only work when NODE_ENV=development.

# Skip all E2E test guards (screen recording, etc.)
# Usage: E2E_TEST_MODE=true NEXT_PUBLIC_E2E_TEST_MODE=true npm run dev
# E2E_TEST_MODE=true
# NEXT_PUBLIC_E2E_TEST_MODE=true

# Skip screen recording permission prompts only (RF-001)
# This is more targeted than E2E_TEST_MODE - only bypasses screen recording.
# Usage: NEXT_PUBLIC_SKIP_SCREEN_RECORDING=true npm run dev
# NEXT_PUBLIC_SKIP_SCREEN_RECORDING=true

# ==============================================================================
# Skip Environment Validation
# ==============================================================================
# Set to skip env validation during build (useful for Docker builds)
# SKIP_ENV_VALIDATION=true
